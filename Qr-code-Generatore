        sizeLabel: "قەبارەی لۆگۆ",
        generateBtn: "QR دروست بکە",
        downloadBtn: "داگرتنی PNG",
        resetBtn: "ڕێکخستنەوە",
        previewTitle: "پێشبینینی کۆدی QR",
        previewDesc: "پێشبینین دەقی سەرەوە و خوارەوەی QR لەخۆدەگرێت. داگرتن هەردووکیان لەخۆدەگرێت.",
        footerText: "دروستکەری کۆدی QR © 2023 | دروستکردنی کۆدی QR تایبەت بە ڕەنگ و لۆگۆ"
      }
    };

    // DOM elements
    const dataEl = document.getElementById('data');
    const qrColorEl = document.getElementById('qrColor');
    const bgColorEl = document.getElementById('bgColor');
    const shapeEl = document.getElementById('shape');
    const useLogoEl = document.getElementById('useLogo');
    const logoControls = document.getElementById('logoControls');
    const logoFileEl = document.getElementById('logoFile');
    const logoUrlEl = document.getElementById('logoUrl');
    const logoSizeEl = document.getElementById('logoSize');
    const logoSizeVal = document.getElementById('logoSizeVal');
    const qrHolder = document.getElementById('qr-holder');
    const qrColorHex = document.getElementById('qrColorHex');
    const bgColorHex = document.getElementById('bgColorHex');
    const qrColorPreview = document.getElementById('qrColorPreview');
    const bgColorPreview = document.getElementById('bgColorPreview');
    const topTextEl = document.getElementById('topText');
    const bottomTextEl = document.getElementById('bottomText');
    const topTextDisplay = document.getElementById('topTextDisplay');
    const bottomTextDisplay = document.getElementById('bottomTextDisplay');
    const qrContainer = document.getElementById('qr-container');
    const topFontSizeEl = document.getElementById('topFontSize');
    const topFontSizeVal = document.getElementById('topFontSizeVal');
    const topFontWeightEl = document.getElementById('topFontWeight');
    const topFontFamilyEl = document.getElementById('topFontFamily');
    const topFontStyleEl = document.getElementById('topFontStyle');
    const topTextColorEl = document.getElementById('topTextColor');
    const bottomFontSizeEl = document.getElementById('bottomFontSize');
    const bottomFontSizeVal = document.getElementById('bottomFontSizeVal');
    const bottomFontWeightEl = document.getElementById('bottomFontWeight');
    const bottomFontFamilyEl = document.getElementById('bottomFontFamily');
    const bottomFontStyleEl = document.getElementById('bottomFontStyle');
    const bottomTextColorEl = document.getElementById('bottomTextColor');
    const langButtons = document.querySelectorAll('.lang-btn');
    const langElements = document.querySelectorAll('.lang');

    // Set initial language
    let currentLang = 'en';

    // Language switching
    langButtons.forEach(button => {
      button.addEventListener('click', () => {
        // Update active button
        langButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');
        
        // Update language
        currentLang = button.getAttribute('data-lang');
        updateLanguage();
      });
    });

    // Update all text elements with current language
    function updateLanguage() {
      langElements.forEach(element => {
        const key = element.getAttribute('data-key');
        if (translations[currentLang][key]) {
          element.textContent = translations[currentLang][key];
        }
      });
      
      // Update select options
      const shapeOptions = shapeEl.querySelectorAll('option');
      shapeOptions.forEach((option, index) => {
        const key = option.getAttribute('data-key');
        if (translations[currentLang][key]) {
          option.textContent = translations[currentLang][key];
        }
      });
    }

    // Toggle expandable sections
    function toggleSection(sectionId) {
      const section = document.getElementById(sectionId);
      section.classList.toggle('expanded');
      const icon = section.querySelector('.fa-chevron-down');
      icon.classList.toggle('fa-chevron-up');
    }

    // Update color previews and hex values
    qrColorEl.addEventListener('input', () => {
      qrColorHex.textContent = qrColorEl.value;
      qrColorPreview.style.backgroundColor = qrColorEl.value;
      updateQR();
    });

    bgColorEl.addEventListener('input', () => {
      bgColorHex.textContent = bgColorEl.value;
      bgColorPreview.style.backgroundColor = bgColorEl.value;
      updateQR();
    });

    // Update logo size display
    function updateLogoSize() {
      logoSizeVal.textContent = logoSizeEl.value + '%';
      updateQR(true);
    }

    // Update text above and below QR code
    function updateText() {
      topTextDisplay.textContent = topTextEl.value;
      bottomTextDisplay.textContent = bottomTextEl.value;
    }

    // Update top text font size
    function updateTopFontSize() {
      topFontSizeVal.textContent = topFontSizeEl.value + 'px';
      updateTextStyle();
    }

    // Update bottom text font size
    function updateBottomFontSize() {
      bottomFontSizeVal.textContent = bottomFontSizeEl.value + 'px';
      updateTextStyle();
    }

    // Update text styling
    function updateTextStyle() {
      // Update top text styling
      topTextDisplay.style.fontSize = topFontSizeEl.value + 'px';
      topTextDisplay.style.fontWeight = topFontWeightEl.value;
      topTextDisplay.style.fontFamily = topFontFamilyEl.value;
      topTextDisplay.style.fontStyle = topFontStyleEl.value;
      topTextDisplay.style.color = topTextColorEl.value;
      
      // Update bottom text styling
      bottomTextDisplay.style.fontSize = bottomFontSizeEl.value + 'px';
      bottomTextDisplay.style.fontWeight = bottomFontWeightEl.value;
      bottomTextDisplay.style.fontFamily = bottomFontFamilyEl.value;
      bottomTextDisplay.style.fontStyle = bottomFontStyleEl.value;
      bottomTextDisplay.style.color = bottomTextColorEl.value;
    }

    // Initialize QRCodeStyling
    let qrCode = new QRCodeStyling({
      width: 300,
      height: 300,
      data: dataEl.value,
      image: undefined,
      dotsOptions: { color: qrColorEl.value, type: 'square' },
      backgroundOptions: { color: bgColorEl.value },
      imageOptions: { crossOrigin: 'anonymous', margin: 5 },
      cornersSquareOptions: { type: 'square' },
    });

    // Append to holder
    qrCode.append(qrHolder);

    // Update QR code
    function updateQR(force=false){
      const data = dataEl.value || '';
      const dotsType = shapeEl.value;
      const dotsTypeMap = { square: 'square', rounded: 'rounded', dots: 'dots' };

      const imageEnabled = useLogoEl.checked && currentLogoDataUrl;
      const logoPercent = Number(logoSizeEl.value);

      // Handle colors
      let qrColor = qrColorEl.value;
      let bgColor = bgColorEl.value;

      const opts = {
        data: data,
        dotsOptions: { color: qrColor, type: dotsTypeMap[dotsType] || 'square' },
        backgroundOptions: { color: bgColor },
      };

      if(imageEnabled){
        opts.image = currentLogoDataUrl;
        const margin = Math.max(2, Math.round((40 - logoPercent) / 4));
        qrCode.update({
          ...opts,
          imageOptions: { crossOrigin: 'anonymous', margin: margin }
        });
      } else {
        qrCode.update({ ...opts, image: undefined });
      }

      if(force){ /* nothing extra required: update triggers redraw */ }
    }

    // Logo handling
    let currentLogoDataUrl = null;
    function onLogoChange(e){
      const file = e.target.files && e.target.files[0];
      if(!file) return;
      const reader = new FileReader();
      reader.onload = function(evt){
        currentLogoDataUrl = evt.target.result;
        logoUrlEl.value = '';
        updateQR(true);
      }
      reader.readAsDataURL(file);
    }

    function onLogoUrlChange(){
      const url = logoUrlEl.value.trim();
      if(!url){ currentLogoDataUrl = null; updateQR(true); return; }
      currentLogoDataUrl = url;
      updateQR(true);
    }

    function onLogoToggle(){
      logoControls.style.display = useLogoEl.checked ? 'block' : 'none';
      updateQR(true);
    }

    // Download function that includes text
    function downloadWithText() {
      // Use html2canvas to capture the entire QR container with text
      html2canvas(qrContainer, {
        scale: 4, // Higher quality for better resolution
        backgroundColor: '#ffffff',
        useCORS: true,
        logging: false
      }).then(canvas => {
        // Create a download link
        const link = document.createElement('a');
        link.download = 'qr-code-with-text.png';
        link.href = canvas.toDataURL('image/png', 1.0); // Maximum quality
        link.click();
      });
    }

    // Original download function (QR only)
    function downloadPNG(){
      qrCode.download({ name: 'qr-code', extension: 'png' });
    }

    function resetDefaults(){
      dataEl.value = 'https://example.com';
      qrColorEl.value = '#000000'; 
      qrColorHex.textContent='#000000';
      qrColorPreview.style.backgroundColor = '#000000';
      bgColorEl.value = '#ffffff'; 
      bgColorHex.textContent='#ffffff';
      bgColorPreview.style.backgroundColor = '#ffffff';
      shapeEl.value = 'square';
      topTextEl.value = '';
      bottomTextEl.value = '';
      topTextDisplay.textContent = '';
      bottomTextDisplay.textContent = '';
      topFontSizeEl.value = 20;
      topFontSizeVal.textContent = '20px';
      topFontWeightEl.value = 'bold';
      topFontFamilyEl.value = "'Segoe UI', Tahoma, Geneva, Verdana, sans-serif";
      topFontStyleEl.value = 'normal';
      topTextColorEl.value = '#212529';
      bottomFontSizeEl.value = 16;
      bottomFontSizeVal.textContent = '16px';
      bottomFontWeightEl.value = 'bold';
      bottomFontFamilyEl.value = "'Segoe UI', Tahoma, Geneva, Verdana, sans-serif";
      bottomFontStyleEl.value = 'normal';
      bottomTextColorEl.value = '#212529';
      updateTextStyle();
      useLogoEl.checked = false; 
      logoControls.style.display='none';
      logoFileEl.value = null; 
      logoUrlEl.value=''; 
      currentLogoDataUrl = null;
      logoSizeEl.value = 20; 
      logoSizeVal.textContent='20%';
      updateQR(true);
    }

    // Event listeners
    logoFileEl.addEventListener('change', onLogoChange);
    shapeEl.addEventListener('change', () => updateQR());
    dataEl.addEventListener('input', () => updateQR());
    logoSizeEl.addEventListener('input', () => updateLogoSize());
    topTextEl.addEventListener('input', () => updateText());
    bottomTextEl.addEventListener('input', () => updateText());

    // Initial draw
    updateQR(true);
    updateLanguage();
    updateTextStyle();
  </script>
</body>
</html>
