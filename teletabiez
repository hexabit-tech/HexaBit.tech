<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Full-Page Image with Animation & Music</title>
  <style>
    /* Ensure no margins and full viewport for body & html */
    html, body {
      margin: 0;
      padding: 0;
      height: 100%;
      overflow: hidden;
    }

    /* Full-screen background image with fade-in animation */
    body {
      background: url('IMG_2864.jpg') no-repeat center center fixed;
      background-size: cover;
      animation: fadeIn 3s ease-in-out;
    }

    /* Fade-in keyframes */
    @keyframes fadeIn {
      0%   { opacity: 0; }
      100% { opacity: 1; }
    }
  </style>
</head>
<body>
  <!-- Audio element for background music (looped, autoplayed, muted allowed) -->
  <audio id="bg-music" autoplay loop>
    <source src="your-music.mp3" type="audio/mpeg">
    Your browser does not support the audio element.
  </audio>

  <!-- Optional: A little script to fade audio volume in -->
  <script>
    const audio = document.getElementById('bg-music');
    audio.volume = 0.0;
    audio.play();
    const fadeDuration = 5000; // duration in ms
    const fadeStep = 0.01;
    const interval = fadeDuration * fadeStep * 0.01;

    const fadeInAudio = setInterval(() => {
      if (audio.volume < 1.0) {
        audio.volume = Math.min(audio.volume + fadeStep, 1.0);
      } else {
        clearInterval(fadeInAudio);
      }
    }, interval);
  </script>
</body>
</html>
